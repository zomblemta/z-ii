{% comment %}
  Renders product variant options

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.
  - picker_type: {String} type of picker to dispay
  - is_color_label: {Boolean} whether this option is a color option


  Usage:
  {% render 'product-variant-options',
    product: product,
    option: option,
    block: block
    picker_type: picker_type,
    is_color_label: is_color_label
  %}
{% endcomment %}
{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
-%}

{%- for value in option.values -%}
  {%- liquid
    assign swatch_focal_point = null
    if value.swatch.image
      assign image_url = value.swatch.image | image_url: width: 50
      assign swatch_value = 'url(' | append: image_url | append: ')'
      assign swatch_focal_point = value.swatch.image.presentation.focal_point
    elsif value.swatch.color
      assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
    else
      assign swatch_value = null
    endif

    assign option_disabled = true
    if value.available
      assign option_disabled = false
    endif
  -%}

  {%- capture input_id -%}
    {{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}
  {%- endcapture -%}

  {%- capture input_name -%}
    {{ option.name }}-{{ option.position }}
  {%- endcapture -%}

  {%- capture input_dataset -%}
    data-product-url="{{ value.product_url }}"
    data-option-value-id="{{ value.id }}"
  {%- endcapture -%}

  {%- capture label_unavailable -%}
    <span class="visually-hidden label-unavailable">
      {{- 'products.product.variant_sold_out_or_unavailable' | t -}}
    </span>
  {%- endcapture -%}

  {% if is_color_label %}
    {% assign value_handle = value | handleize %}
    {% comment %} Debug: value = {{ value }}, value_handle = {{ value_handle }} {% endcomment %}
    {% assign color_name = shop.metaobjects['shopify--color-pattern'][value_handle] %}
    {% comment %} Debug: color_name = {{ color_name | json }} {% endcomment %}
    
    {%- liquid
      # 如果 metaobjects 中没有找到颜色，使用 value.swatch 作为备用
      assign color_value = null
      assign color_image = null
      
      if color_name and color_name.color.value
        assign color_value = color_name.color.value
        if color_name.image
          assign color_image = color_name.image
        endif
      elsif value.swatch.color
        assign color_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
      elsif value.swatch.image
        assign color_image = value.swatch.image
      endif
    -%}
    <input
      type="radio"
      id="{{ input_id }}"
      name="{{ input_name | escape }}"
      value="{{ value | escape }}"
      form="{{ product_form_id }}"
      {% if value.selected %}
        checked
      {% endif %}
      {% if option_disabled %}
        disabled
        class="disabled"
      {% endif %}
      {{ input_dataset }}
    >
    <label
      class="w-6 h-6 rounded-full border border-solid border-[#C9C9C9] flex items-center justify-center overflow-hidden {% if option_disabled %}disabled{% endif %}"
      {% if color_value %}
        style="background-color: {{ color_value }};"
      {% endif %}
      for="{{ input_id }}"
    >
      {%- if color_image %}
        {% render 'alp-responsive-image', image: color_image, width: 24, height: 24 %}
      {% endif %}
    </label>
  {% else %}
    <input
      type="radio"
      id="{{ input_id }}"
      name="{{ input_name | escape }}"
      value="{{ value | escape }}"
      form="{{ product_form_id }}"
      {% if value.selected %}
        checked
      {% endif %}
      {% if option_disabled %}
        disabled
        class="disabled"
      {% endif %}
      {{ input_dataset }}
    >
    <label for="{{ input_id }}" class="text-black {% if option_disabled %}disabled{% endif %}">
      {{ value -}}
      {{ label_unavailable }}
    </label>
  {% endif %}
{%- endfor -%}
