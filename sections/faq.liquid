<style>
  .faq-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 20px 60px;
  }
  
  .faq-header {
    margin-bottom: 40px;
  }
  
  .faq-title {
    font-family: 'Montaga', serif;
    font-size: 28px;
    line-height: 36px;
    font-weight: 400;
    margin: 0 0 4px 0;
  }
  
  .faq-subtitle {
    font-family: 'Montaga', serif;
    font-size: 28px;
    line-height: 36px;
    font-weight: 400;
    margin: 0;
  }
  
  .faq-container {
    display: flex;
    gap: 40px;
    position: relative;
  }
  
  /* 左侧导航栏 - PC端 */
  .faq-sidebar {
    flex-shrink: 0;
    width: 200px;
    position: sticky;
    top: 100px;
    height: fit-content;
  }
  
  .faq-nav {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  .faq-nav__item {
    padding: 14px 16px;
    font-size: 14px;
    line-height: 20px;
    color: #666;
    cursor: pointer;
    transition: all 0.2s ease;
    background: transparent;
    border: none;
    text-align: left;
    font-family: inherit;
    border-radius: 0;
  }
  
  .faq-nav__item:hover {
    color: #000;
    background-color: #f5f5f5;
  }
  
  .faq-nav__item.active {
    color: #000;
    font-weight: 400;
    background-color: #000;
    color: #fff;
  }
  
  /* 右侧内容区域 */
  .faq-content {
    flex: 1;
    min-width: 0;
  }
  
  .faq-category {
    margin-bottom: 50px;
    scroll-margin-top: 120px;
  }
  
  .faq-category:last-child {
    margin-bottom: 0;
  }
  
  .faq-category__title {
    font-size: 14px;
    line-height: 20px;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    margin-bottom: 20px;
    color: #000;
  }
  
  .faq-category__description {
    font-size: 13px;
    line-height: 20px;
    color: #666;
    margin-bottom: 16px;
  }
  
  .faq-category__content {
    display: flex;
    flex-direction: column;
    gap: 0;
  }
  
  /* 可折叠项目 */
  .faq-item {
    border-top: 1px solid #e5e5e5;
  }
  
  .faq-item:last-child {
    border-bottom: 1px solid #e5e5e5;
  }
  
  .faq-item__header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    font-family: inherit;
    gap: 20px;
  }
  
  .faq-item__question {
    font-size: 13px;
    line-height: 18px;
    color: #000;
    font-weight: 400;
    flex: 1;
  }
  
  .faq-item__icon {
    flex-shrink: 0;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
    color: #000;
  }
  
  .faq-item__icon svg {
    width: 100%;
    height: 100%;
  }
  
  .faq-item.active .faq-item__icon {
    transform: rotate(180deg);
  }
  
  .faq-item__answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }
  
  .faq-item.active .faq-item__answer {
    max-height: 2000px;
  }
  
  .faq-item__answer-content {
    padding: 0 0 20px 0;
    font-size: 13px;
    line-height: 20px;
    color: #666;
  }
  
  .faq-item__answer-content p {
    margin: 0 0 12px 0;
  }
  
  .faq-item__answer-content p:last-child {
    margin-bottom: 0;
  }
  
  .faq-item__answer-content a {
    color: #000;
    text-decoration: underline;
  }
  
  /* 简单文本项目（不可折叠） */
  .faq-simple-item {
    border-top: 1px solid #e5e5e5;
    padding: 18px 0;
    font-size: 13px;
    line-height: 18px;
    color: #000;
  }
  
  .faq-simple-item:last-child {
    border-bottom: 1px solid #e5e5e5;
  }
  
  /* 移动端横向导航 */
  .faq-mobile-nav {
    display: none;
    overflow-x: auto;
    margin-bottom: 30px;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    position: relative;
  }
  
  .faq-mobile-nav::-webkit-scrollbar {
    display: none;
  }
  
  .faq-mobile-nav__list {
    display: flex;
    gap: 0;
    padding-bottom: 2px;
    border-bottom: 1px solid #e5e5e5;
  }
  
  .faq-mobile-nav__item {
    flex-shrink: 0;
    padding: 12px 0;
    margin-right: 24px;
    font-size: 13px;
    line-height: 18px;
    color: #999;
    background: transparent;
    border: none;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    white-space: nowrap;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .faq-mobile-nav__item.active {
    color: #000;
    border-bottom-color: #000;
    font-weight: 500;
  }
  
  /* 响应式 - 平板和PC */
  @media screen and (min-width: 768px) {
    .faq-section {
      padding: 60px 40px 100px;
    }
    
    .faq-title,
    .faq-subtitle {
      font-size: 36px;
      line-height: 44px;
    }
    
    .faq-container {
      gap: 60px;
    }
    
    .faq-category {
      scroll-margin-top: 100px;
    }
    
    .faq-category__title {
      font-size: 15px;
      line-height: 22px;
      margin-bottom: 24px;
    }
    
    .faq-category__description {
      font-size: 13px;
      line-height: 22px;
      margin-bottom: 20px;
    }
    
    .faq-item__question {
      font-size: 14px;
      line-height: 20px;
    }
    
    .faq-item__answer-content {
      font-size: 13px;
      line-height: 22px;
    }
    
    .faq-simple-item {
      font-size: 14px;
      line-height: 20px;
    }
  }
  
  @media screen and (min-width: 1024px) {
    .faq-sidebar {
      width: 220px;
    }
  }
  
  /* 响应式 - 移动端 */
  @media screen and (max-width: 767px) {
    .faq-sidebar {
      display: none;
    }
    
    .faq-mobile-nav {
      display: block;
    }
    
    .faq-container {
      flex-direction: column;
      gap: 0;
    }
    
    .faq-category {
      margin-bottom: 40px;
      scroll-margin-top: 60px;
    }
  }
</style>

<div class="faq-section section-{{ section.id }}-padding">
  <div class="faq-section__inner">
    <!-- 页面标题 -->
    {%- if section.settings.title != blank or section.settings.subtitle != blank -%}
      <div class="faq-header">
        {%- if section.settings.title != blank -%}
          <h1 class="faq-title">{{ section.settings.title }}</h1>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="faq-subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    {%- assign categories = section.blocks | where: "type", "category" -%}
    
    {%- if categories.size > 0 -%}
      <!-- 移动端横向导航 -->
      <div class="faq-mobile-nav">
        <div class="faq-mobile-nav__list">
          {%- for category in categories -%}
            {%- if category.settings.title != blank -%}
              {% assign category_id = 'category-' | append: section.id | append: '-' | append: category.id %}
              <button 
                class="faq-mobile-nav__item{% if forloop.first %} active{% endif %}" 
                data-category="{{ category_id }}"
                onclick="scrollToCategory('{{ category_id }}', this, true)"
              >
                {{ category.settings.title }}
              </button>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
      
      <div class="faq-container">
        <!-- PC端侧边栏导航 -->
        <aside class="faq-sidebar">
          <nav class="faq-nav">
            {%- for category in categories -%}
              {%- if category.settings.title != blank -%}
                {% assign category_id = 'category-' | append: section.id | append: '-' | append: category.id %}
                <button 
                  class="faq-nav__item{% if forloop.first %} active{% endif %}" 
                  data-category="{{ category_id }}"
                  onclick="scrollToCategory('{{ category_id }}', this, false)"
                >
                  {{ category.settings.title }}
                </button>
              {%- endif -%}
            {%- endfor -%}
          </nav>
        </aside>
        
        <!-- 右侧内容区域 -->
        <div class="faq-content">
          {%- for category in categories -%}
            {%- if category.settings.title != blank -%}
              {% assign category_id = 'category-' | append: section.id | append: '-' | append: category.id %}
              <div class="faq-category" id="{{ category_id }}" {{ category.shopify_attributes }}>
                <h2 class="faq-category__title">{{ category.settings.title }}</h2>
                
                {%- if category.settings.description != blank -%}
                  <div class="faq-category__description">
                    {{ category.settings.description }}
                  </div>
                {%- endif -%}
                
                <!-- 获取当前分类下的所有项目 -->
                <div class="faq-category__content">
                  {%- for block in section.blocks -%}
                    {%- if block.settings.parent_category == category.id -%}
                      
                      {%- if block.type == "faq_item" and block.settings.question != blank -%}
                        <!-- 可折叠FAQ项目 -->
                        {% assign item_id = 'faq-item-' | append: section.id | append: '-' | append: block.id %}
                        <div class="faq-item" {{ block.shopify_attributes }}>
                          <button class="faq-item__header" onclick="toggleFaqItem('{{ item_id }}')">
                            <span class="faq-item__question">{{ block.settings.question }}</span>
                            <span class="faq-item__icon">
                              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                              </svg>
                            </span>
                          </button>
                          <div class="faq-item__answer" id="{{ item_id }}">
                            <div class="faq-item__answer-content">
                              {{ block.settings.answer }}
                            </div>
                          </div>
                        </div>
                      {%- endif -%}
                      
                      {%- if block.type == "simple_item" and block.settings.text != blank -%}
                        <!-- 简单文本项目（不可折叠） -->
                        <div class="faq-simple-item" {{ block.shopify_attributes }}>
                          {{ block.settings.text }}
                        </div>
                      {%- endif -%}
                      
                    {%- endif -%}
                  {%- endfor -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

<script>
  // 切换FAQ项目展开/收起
  function toggleFaqItem(itemId) {
    const answerElement = document.getElementById(itemId);
    const item = answerElement.closest('.faq-item');
    item.classList.toggle('active');
  }
  
  // 滚动到指定分类
  function scrollToCategory(categoryId, button, isMobile) {
    const category = document.getElementById(categoryId);
    if (category) {
      const offset = isMobile ? 60 : 100;
      const categoryTop = category.getBoundingClientRect().top + window.pageYOffset - offset;
      
      window.scrollTo({
        top: categoryTop,
        behavior: 'smooth'
      });
      
      // 更新导航活动状态
      const parentNav = button.closest('.faq-nav, .faq-mobile-nav__list');
      const navItems = parentNav.querySelectorAll('.faq-nav__item, .faq-mobile-nav__item');
      navItems.forEach(item => item.classList.remove('active'));
      button.classList.add('active');
    }
  }
  
  // 滚动监听，自动更新活动导航项
  let scrollTimeout;
  let isUserScrolling = true;
  
  window.addEventListener('scroll', function() {
    if (!isUserScrolling) return;
    
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(function() {
      const categories = document.querySelectorAll('.faq-category');
      let currentCategory = null;
      const isMobile = window.innerWidth < 768;
      const offset = isMobile ? 80 : 120;
      
      // 找到当前视口中的分类
      categories.forEach(category => {
        const rect = category.getBoundingClientRect();
        if (rect.top <= offset && rect.bottom > offset) {
          currentCategory = category.id;
        }
      });
      
      // 如果没有找到，使用第一个进入视口的
      if (!currentCategory) {
        categories.forEach(category => {
          const rect = category.getBoundingClientRect();
          if (rect.top > 0 && rect.top < window.innerHeight / 2) {
            if (!currentCategory) {
              currentCategory = category.id;
            }
          }
        });
      }
      
      if (currentCategory) {
        updateActiveNav(currentCategory, isMobile);
      }
    }, 100);
  });
  
  // 更新导航活动状态
  function updateActiveNav(categoryId, isMobile) {
    // 更新PC端导航
    const navItems = document.querySelectorAll('.faq-nav__item');
    navItems.forEach(item => {
      if (item.getAttribute('data-category') === categoryId) {
        item.classList.add('active');
      } else {
        item.classList.remove('active');
      }
    });
    
    // 更新移动端导航
    const mobileNavItems = document.querySelectorAll('.faq-mobile-nav__item');
    mobileNavItems.forEach(item => {
      if (item.getAttribute('data-category') === categoryId) {
        item.classList.add('active');
        // 移动端导航自动滚动到当前项
        if (isMobile) {
          item.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
        }
      } else {
        item.classList.remove('active');
      }
    });
  }
  
  // 页面加载时，如果URL有hash，滚动到对应位置
  document.addEventListener('DOMContentLoaded', function() {
    if (window.location.hash) {
      const targetId = window.location.hash.substring(1);
      const target = document.getElementById(targetId);
      if (target) {
        setTimeout(function() {
          const isMobile = window.innerWidth < 768;
          const offset = isMobile ? 60 : 100;
          const targetTop = target.getBoundingClientRect().top + window.pageYOffset - offset;
          window.scrollTo({
            top: targetTop,
            behavior: 'smooth'
          });
        }, 100);
      }
    }
  });
</script>

