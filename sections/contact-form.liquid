{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<style>
  #ContactForm input:focus,
  #ContactForm input:focus-visible,
  #ContactForm textarea:focus,
  #ContactForm textarea:focus-visible {
    outline: none !important;
    box-shadow: none !important;
  }
</style>
<div>
  <div class="py-3.5 md:py-10">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 bg-[#F2F2F2] rounded-[5px] md:gap-[40px] md:flex-row px-[22px] py-[20px] md:p-9">
        <!-- Right Side - Form -->
        <div class=" rounded-[5px] flex flex-col gap-[25px] ">
          <div class="">
            <h2 class="text-[32px] leading-[32px] font-normal font-Montaga  md:text-[72px] md:leading-[72px] mb-5 md:mb-[30px]">
              Leave your email,<br>
              information,<br>
              and requirements.
            </h2>
            <p class="text-base md:text-[32px] font-light">Let us contact you later!</p>
          </div>
        </div>

        {%- form 'contact', id: 'ContactForm', class: 'space-y-6 ' -%}
          {%- if form.posted_successfully? -%}
            <div
              class="bg-green-50 border border-green-200 rounded-lg p-4 flex items-start gap-3"
              tabindex="-1"
              autofocus
            >
              {{- 'icon-success.svg' | inline_asset_content -}}
              <span class="text-green-800">{{ 'templates.contact.form.post_success' | t }}</span>
            </div>
          {%- elsif form.errors -%}
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <div class="flex items-start gap-3 mb-2">
                {{- 'icon-error.svg' | inline_asset_content -}}
                <span class="text-red-800 font-medium">{{ 'templates.contact.form.error_heading' | t }}</span>
              </div>
              <ul class="text-sm text-red-600 ml-8">
                <li>
                  <a href="#ContactForm-email" class="underline hover:no-underline">
                    {{ form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email }}
                  </a>
                </li>
              </ul>
            </div>
          {%- endif -%}

          <!-- Four Column Fields on Desktop -->
          <div class="grid grid-cols-1 gap-y-[20px] sm:grid-cols-2  gap-4 w-full">
            <div class="relative w-full">
              <input
                class="w-full px-3 py-[10px] md:px-5 md:py-[14px] border border-white bg-white rounded-[5px] outline-none  placeholder-[#BABABA] text-[#BABABA] text-base md:text-[20px]"
                autocomplete="name"
                type="text"
                id="ContactForm-name"
                name="contact[{{ 'templates.contact.form.name' | t }}]"
                value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                placeholder="Your name"
              >
            </div>
            <div class="relative">
              <input
                class="w-full px-3 py-[10px] md:px-5 md:py-[14px] border border-white bg-white rounded-[5px] outline-none  placeholder-[#BABABA] text-[#BABABA] text-base md:text-[20px]"
                autocomplete="organization"
                type="text"
                id="ContactForm-company"
                name="contact[Company name]"
                value="{% if form.company %}{{ form.company }}{% endif %}"
                placeholder="Company name"
              >
            </div>
            <div class="relative">
              <input
                class="w-full px-3 py-[10px] md:px-5 md:py-[14px] border border-white bg-white rounded-[5px] outline-none  placeholder-[#BABABA] text-[#BABABA] text-base md:text-[20px]"
                autocomplete="organization-title"
                type="text"
                id="ContactForm-job"
                name="contact[Job title]"
                value="{% if form.job %}{{ form.job }}{% endif %}"
                placeholder="Job title"
              >
            </div>
            <div class="relative">
              <input
                type="tel"
                id="ContactForm-phone"
                class="w-full px-3 py-[10px] md:px-5 md:py-[14px] border border-white bg-white rounded-[5px] outline-none  placeholder-[#BABABA] text-[#BABABA] text-base md:text-[20px]"
                autocomplete="tel"
                name="contact[{{ 'templates.contact.form.phone' | t }}]"
                pattern="[0-9\-]*"
                value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                placeholder="Phone number"
              >
            </div>
          </div>

          <!-- Email Field (Full Width) -->
          <div class="relative">
            <input
              autocomplete="email"
              type="email"
              id="ContactForm-email"
              class="w-full px-3 py-[10px] md:px-5 md:py-[14px] border border-white bg-white rounded-[5px] outline-none  placeholder-[#BABABA] text-[#BABABA] text-base md:text-[20px] {% if form.errors contains 'email' %}border-red-500{% endif %}"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="ContactForm-email-error"
              {% endif %}
              placeholder="E-mail"
            >
            {%- if form.errors contains 'email' -%}
              <small class="text-red-600 text-sm mt-1 flex items-center gap-1" id="ContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                {{- 'icon-error.svg' | inline_asset_content -}}
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </small>
            {%- endif -%}
          </div>

          <!-- Message Field (Full Width) -->
          <div class="relative">
            <textarea
              rows="6"
              id="ContactForm-body"
              class="w-full px-3 py-[10px] md:px-5 md:py-[14px] border border-white bg-white rounded-[5px] outline-none  placeholder-[#BABABA] text-[#BABABA] text-base md:text-[20px] resize-none"
              name="contact[{{ 'templates.contact.form.comment' | t }}]"
              placeholder="How can we help you?"
            >{{- form.body -}}</textarea>
          </div>

          <!-- Submit Button -->
          <div class="pt-4">
            <button
              type="submit"
              class="w-full md:min-w-[300px] md:w-auto px-8 py-3 bg-black text-white rounded-[5px] hover:bg-gray-800 transition-colors duration-200 font-medium text-base md:text-[20px]"
            >
              {{ 'templates.contact.form.send' | t }}
            </button>
          </div>
        {%- endform -%}
      </div>
    </div>
  </div>

  <div class="flex flex-col md:flex-row w-full mb-[20px] md:mb-[40px]">
    <div class="bg-[#333333] py-[30px] flex justify-center items-center flex-1">
      <div class="flex flex-col gap-[30px] md:gap-[60px]">
        <h3 class="m-0 text-white text-[32px] leading-[28px] font-Montaga md:text-[72px] md:leading-[68px]">
          Contact us now?
        </h3>
        <div class="flex items-start flex-col gap-[16px]">
          <p class="text-white text-base leading-[28px] md:text-[24px] font-light flex items-center  ">
            <span class="mr-[14px]">{% render 'icon', icon: 'icon-email-white',class: 'text-white ' %}</span> Email: 
            <a class="text-white font-normal underline " href="mailto:info@ziistudios.com">info@ziistudios.com</a>
          </p>
          <p class="text-white text-base leading-[28px] md:text-[24px] font-light flex items-center  ">
            <span class="mr-[14px]">{% render 'icon', icon: 'icon-phone-white',class: 'text-white ' %}</span>Telephone: 
            <span class="text-white font-normal underline ">+86 186 8887 3388</span>
          </p>
          <p class="text-white text-base leading-[28px] md:text-[24px] font-light flex items-center  ">
            <span class="mr-[14px]">{% render 'icon', icon: 'icon-whatsapp-white',class: 'text-white ' %}</span> WhatsApp: 
            <span class="text-white font-normal underline " >+86 186 8887 3388</span>
          </p>
        </div>

        <div class=" flex mx-auto w-full  items-center justify-between">
          <a href="{{ settings.social_facebook_link }}" target="_blank">
            {% render 'icon', icon: 'icon-facebook' %}
            <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
          </a>
  
          <a href="{{ settings.social_pinterest_link }}" target="_blank">
            {% render 'icon', icon: 'icon-pinterest' %}
            <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
          </a>
  
          <a href="{{ settings.social_twitter_link }}" target="_blank">
            {% render 'icon', icon: 'icon-twitter' %}
            <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
          </a>
  
          <a href="{{ settings.social_instagram_link }}" target="_blank">
            {% render 'icon', icon: 'icon-instagram' %}
            <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
          </a>
  
          <a href="{{ settings.social_tiktok_link }}" target="_blank">
            {% render 'icon', icon: 'icon-tiktok' %}
            <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
          </a>
        </div>
      </div>
    </div>
    <div class="w-full h-full flex-1 aspect-375/324 md:aspect-720/622">
      {% render 'alp-responsive-image', image: section.settings.image, class: 'w-full h-full object-cover' %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
  
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    }
    
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
