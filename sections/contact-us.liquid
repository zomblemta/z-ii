<div class="flex flex-col gap-[30px] mx-[15px]  md:mx-[53px]">
  <div class="w-full flex flex-col md:flex-row md:gap-[30px]">
    <div class="px-[13px] py-[18px] md:px-[20px] bg-[#E7E7E7] rounded-[5px] flex-1">
      <h3 class="m-0 text-[30px] font-Montaga leading-[32px] font-normal">Subscribe,</h3>
      <p class="m-0 text-xl font-normal md:text-2xl font-Montaga leading-[32px]">
        and get access to exclusive news, sneak peaks on new launches.
      </p>
      {%- form 'customer', id: 'ContactFooter', class: 'w-full ' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__field-wrapper w-full">
          <div class="field w-full">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="w-full h-[40px] bg-white rounded-[5px] px-[15px] text-base font-light leading-[32px] text-[#BABABA] mt-[24px]"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder="{{ 'newsletter.label' | t }}"
              required
            >
            {% comment %}
              <label class="field__label" for="NewsletterForm--{{ section.id }}">
                {{ 'newsletter.label' | t }}
              </label>
            {% endcomment %}
          </div>
          <button
            type="submit"
            class="rounded-[5px] bg-black text-white hover:bg-white hover:text-black transition-all duration-300 text-base font-normal tracking-[1.6px] uppercase w-full h-[40px] flex justify-center items-center mt-[16px]"
            name="commit"
            id="Subscribe"
            aria-label="{{ 'newsletter.button_label' | t }}"
          >
            Subscribe
          </button>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="ContactFooter-error">
              <span class="svg-wrapper">
                {{- 'icon-error.svg' | inline_asset_content -}}
              </span>
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </small>
          {%- endif -%}
        </div>
        {%- if form.posted_successfully? -%}
          <h3
            class="newsletter-form__message newsletter-form__message--success form__message"
            id="ContactFooter-success"
            tabindex="-1"
            autofocus
          >
            <span class="svg-wrapper">
              {{- 'icon-success.svg' | inline_asset_content -}}
            </span>
            {{- 'newsletter.success' | t }}
          </h3>
        {%- endif -%}
      {%- endform -%}
    </div>
    {% assign contact_url = pages['contact-us'].url %}
    <a href="{{ contact_url }}">
      <div class="w-full md:w-[318px] flex justify-center items-center bg-[#BABABA] rounded-[5px] hover:opacity-80 transition-all duration-300 cursor-pointer">
        <div>
          <h3 class="m-0 text-[24px] md:text-[32px] font-Montaga uppercase font-normal">Contact Us</h3>
          <div>
            <p class="m-0 text-sm font-light font-Montaga leading-[24px]">
              Email: <a href="mailto:info@ziistudios.com" class="underline text-black font-medium">info@ziistudios.com</a>
              <br>
              Telephone: <a class="underline text-black font-medium">+86 186 8887 3388</a> <br>
              Whatsapp: <a class="underline text-black font-medium">+86 186 8887 3388</a>
            </p>
          </div>
        </div>
      </div>
    </a>
  </div>
  <div class="w-full flex bg-[#E7E7E7] rounded-[5px] flex-col md:flex-row gap-[24px] md:gap-[55px] px-[13px] py-[22px] md:px-[20px] md:py-[30px]">
    <div class="md:w-[1/2] flex-1">
      <h3 class="m-0 text-[30px] md:text-[40px] font-Montaga  font-normal">Frequently asked questions</h3>
      <p class="m-0 text-base md:text-xl font-normal font-Montaga leading-[24px]">
        Need some help? Browse through our summary of the most frequently asked questions about shipping, returns,
        samples, sourcing, pricing, and many more.
      </p>

      <a href="{{ section.settings.faq_url }}" class="w-full mt-[24px] md:w-[151px] h-[40px] bg-black text-white text-base flex justify-center items-center rounded-[5px]">
        View More
      </a>
    </div>

    <div class="md:w-[1/2] flex-1 grid grid-cols-1  gap-[12px]">
      {%- for block in section.blocks -%}
        <div class="faq-item">
          <div class="faq-question bg-[#F2F2F2] rounded-[5px] px-[12px] py-[10px] text-xs md:text-base font-light flex justify-between items-center cursor-pointer">
            <span>{{ block.settings.question }}</span>
            <span class="faq-icon transition-transform duration-300">
              {% render 'icon', icon: 'icon-plus' %}
            </span>
          </div>
          <div class="faq-answer hidden mt-[12px] px-[12px] text-xs font-light leading-[18px]">
            {{ block.settings.answer }}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const faqItems = document.querySelectorAll('.faq-item');

    faqItems.forEach(function (item) {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');

      question.addEventListener('click', function () {
        // 切换答案的显示/隐藏
        answer.classList.toggle('hidden');

        // 旋转图标（加号变成减号的效果）
        if (answer.classList.contains('hidden')) {
          icon.style.transform = 'rotate(0deg)';
        } else {
          icon.style.transform = 'rotate(45deg)';
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "Contact Us Form",
  "settings": [
    {
      "type": "url",
      "id": "faq_url",
      "label": "FAQ URL"
    }
   
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Us Form"
    }
  ]
}
{% endschema %}
