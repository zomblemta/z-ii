<div class="flex flex-col gap-[30px] mx-[15px]  md:mx-[53px]">
  <div class="w-full flex flex-col md:flex-row md:gap-[30px]">
    <div class="px-[13px] py-[18px] md:px-[20px] bg-[#E7E7E7] rounded-[5px]">
      <h3 class="m-0 text-[30px] font-Montaga leading-[32px] font-normal">Subscribe,</h3>
      <p class="m-0 text-xl font-normal md:text-2xl font-Montaga leading-[32px]">
        and get access to exclusive news, sneak peaks on new launches.
      </p>
      {%- form 'customer', id: 'ContactFooter', class: ' ' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__field-wrapper">
          <div class="field">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="w-full h-[40px] bg-white rounded-[5px] px-[15px] text-base font-light leading-[32px] text-[#BABABA] mt-[24px]"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder="{{ 'newsletter.label' | t }}"
              required
            >
            <label class="field__label" for="NewsletterForm--{{ section.id }}">
              {{ 'newsletter.label' | t }}
            </label>
          </div>
          <button
            type="submit"
            class="rounded-[5px] bg-black text-white text-base font-normal tracking-[1.6px] uppercase w-full h-[40px] flex justify-center items-center mt-[16px]"
            name="commit"
            id="Subscribe"
            aria-label="{{ 'newsletter.button_label' | t }}"
          >
            Subscribe
          </button>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="ContactFooter-error">
              <span class="svg-wrapper">
                {{- 'icon-error.svg' | inline_asset_content -}}
              </span>
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </small>
          {%- endif -%}
        </div>
        {%- if form.posted_successfully? -%}
          <h3
            class="newsletter-form__message newsletter-form__message--success form__message"
            id="ContactFooter-success"
            tabindex="-1"
            autofocus
          >
            <span class="svg-wrapper">
              {{- 'icon-success.svg' | inline_asset_content -}}
            </span>
            {{- 'newsletter.success' | t }}
          </h3>
        {%- endif -%}
      {%- endform -%}
    </div>

    <div class="w-full md:w-[318px] flex justify-between items-center bg-[#BABABA] rounded-[5px] ">
      <div>
        <h3 class="m-0 text-[24px] md:text-[32px] font-Montaga uppercase font-normal">Contact Us</h3>
        <div>
          <p class="m-0 text-sm font-light font-Montaga leading-[24px]">
            Email: <a href="mailto:business@Z-II.com" class="underline text-black font-medium">business@Z-II.com</a>
            <br>
            Telephone: <a class="underline text-black font-medium">+86 186 8887 3388</a> <br>
            Whatsapp: <a class="underline text-black font-medium">+86 186 8887 3388</a>
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="w-full flex flex-col md:flex-row gap-[24px] md:gap-[55px] px-[13px] py-[22px] md:px-[20px] md:py-[30px]">
    <div>
      <h3 class="m-0 text-[30px] md:text-[40px] font-Montaga  font-normal">Frequently asked questions</h3>
      <p class="m-0 text-xl font-normal font-Montaga leading-[24px]">
        Need some help? Browse through our summary of the most frequently asked questions about shipping, returns,
        samples, sourcing, pricing, and many more.
      </p>

      <div class="w-full mt-[24px] md:w-[151px] h-[40px] bg-black text-white text-base flex justify-center items-center rounded-[5px]">
        View More
      </div>
    </div>

    <div class="flex flex-col gap-[12px]">
      <div class="bg-[#F2F2F2] rounded-[5px] px-[12px] py-[6px] text-xs font-light  flex justify-between items-center">
        What if I would like a product that is not in your catalog?
        {% render 'icon', icon: 'icon-plus' %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact Us Form",
  "presets": [
    {
      "name": "Contact Us Form"
    }
  ]
}
{% endschema %}
