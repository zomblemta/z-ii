<style>
  .brand-marquee-container {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .brand-wrapper {
    display: flex;
    align-items: center;
    gap: 40px;
    animation: marquee-scroll 30s linear infinite;
    width: fit-content;
  }

  @media (min-width: 768px) {
    .brand-wrapper {
      gap: 50px;
    }
  }

  .brand-item {
    flex-shrink: 0;
    min-width: 120px;
    width: 120px;
  }

  @media (min-width: 768px) {
    .brand-item {
      height: 60px;
    }
    .brand-item img {
      height: 100%;
      object-fit: cover;
    }
  }

  @keyframes marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>

<div class="brand-marquee-container mt-[10px]  px-[14px] md:px-[53px]">
  <div class="brand-wrapper">
    <!-- 第一组品牌logo -->
    {% for block in section.blocks %}
      <div class="brand-item h-[30px] md:h-[60px]">
        {% render 'alp-responsive-image', image: block.settings.image, class: 'w-full h-full object-cover' %}
      </div>
    {% endfor %}
    <!-- 复制第二组品牌logo以实现无缝循环 -->
    {% for block in section.blocks %}
      <div class="brand-item h-[30px] md:h-[78px]">
        {% render 'alp-responsive-image', image: block.settings.image, class: 'w-full h-full object-cover' %}
      </div>
    {% endfor %}
  </div>

  <div class=" mt-[30px] md:mt-[40px]">
    <h2 class="text-[26px] relative text-black md:text-[64px] md:leading-[72px] font-Montaga font-normal leading-[32px]  ">
      <span>
       {{ section.settings.title }}
      </span>
      <a class="button-black block mt-4 md:inline-flex  md:absolute md:bottom-2.5 md:ml-5 " href="{{ section.settings.link }}"> View all products </a>
    </h2>
  </div>
</div>

{% schema %}
{
  "name": "Index Partner Brand",
  "settings": [
    {
      "type": "url",
      "id": "link",
      "label": "Li nk"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Edited to essence made to endure. Minimal design with assured delivery for modern boutiques and online labels."
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Index Partner Brand"
    }
  ]
}
{% endschema %}
